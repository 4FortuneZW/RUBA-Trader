{
  "name": "ruba-trader",
  "version": "1.0.0",
  "description": "Cryptocurrency trading bot with Discord integration and GitHub automation",
  "main": "src/bot/index.js",
  "scripts": {
    "start": "node src/bot/index.js",
    "dev": "nodemon src/bot/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.js",
    "lint:fix": "eslint src/**/*.js --fix",
    "format": "prettier --write \"**/*.{js,json,md}\"",
    "db:migrate": "npx prisma migrate dev",
    "db:studio": "npx prisma studio",
    "db:seed": "node scripts/seed.js",
    "sync": "node scripts/auto-git.js",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down"
  },
  "keywords": [
    "discord-bot",
    "crypto",
    "trading",
    "bitcoin",
    "ethereum",
    "automation",
    "github"
  ],
  "author": "4FortuneZW",
  "license": "TBD",
  "dependencies": {
    "discord.js": "^14.14.1",
    "prisma": "^5.9.1",
    "@prisma/client": "^5.9.1",
    "simple-git": "^3.23.0",
    "node-cron": "^3.0.3",
    "dotenv": "^16.4.1",
    "axios": "^1.6.5",
    "binance": "^3.0.10",
    "ccxt": "^4.2.23",
    "winston": "^3.11.0",
    "redis": "^4.6.12",
    "joi": "^17.12.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.3",
    "jest": "^29.7.0",
    "eslint": "^8.56.0",
    "prettier": "^3.2.4",
    "supertest": "^6.3.4"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/4FortuneZW/RUBA-Trader.git"
  },
  "bugs": {
    "url": "https://github.com/4FortuneZW/RUBA-Trader/issues"
  },
  "homepage": "https://github.com/4FortuneZW/RUBA-Trader#readme"
}
